# Application settings
APP_NAME="AItestdemo API"
APP_VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/aitestdemo

# ChromaDB
CHROMA_DB_PATH=/opt/AItestdemo/data/chroma_db
CHROMA_COLLECTION_NAME="documents"

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# File storage
UPLOAD_DIR=/opt/AItestdemo/data/documents
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=txt,pdf,xls,xlsx,jpg,jpeg,png

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# OCR settings
TESSERACT_CMD=/usr/bin/tesseract

# Logging
LOG_LEVEL=INFO